<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lightBackground"
    tools:context="fox.telehealthmeditek.VerifyCodeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageViewLogo"
        android:src="@drawable/logo_redimed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/bgVerifyPhone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageViewLogo"/>


    <EditText
        android:id="@+id/etCode"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="numberPassword"
        android:layout_marginLeft="-50dp"
        android:background="@drawable/textview_border"
        android:layout_alignTop="@+id/etCode2"
        android:layout_alignStart="@+id/btnVerifyPhone" />

    <EditText
        android:id="@+id/etCode2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="numberPassword"
        android:layout_marginLeft="120dp"
        android:background="@drawable/textview_border"
        android:layout_centerVertical="true" />

    <EditText
        android:id="@+id/etCode3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="numberPassword"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_border"
        android:layout_above="@+id/btnVerifyPhone"
        android:layout_alignEnd="@+id/btnVerifyPhone" />

    <EditText
        android:id="@+id/etCode4"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="numberPassword"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_border"
        android:layout_above="@+id/btnVerifyPhone"
        android:layout_toEndOf="@+id/btnVerifyPhone" />

    <Button
        android:id="@+id/btnVerifyPhone"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="Verify"
        android:textColor="@color/light_font"
        android:background="@drawable/button_radius"
        android:layout_below="@+id/etCode"/>

</RelativeLayout>
