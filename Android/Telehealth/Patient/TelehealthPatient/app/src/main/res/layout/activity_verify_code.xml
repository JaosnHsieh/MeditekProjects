<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lightBackground"
    tools:context="com.redimed.telehealth.patient.VerifyCodeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageViewLogo"
        android:src="@drawable/logo_redimed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/imageVerifyPhone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageViewLogo"/>

    <EditText
        android:id="@+id/txtCode"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="number"
        android:layout_marginLeft="-50dp"
        android:background="@drawable/txt_border"
        android:layout_alignTop="@+id/txtCode2"
        android:layout_alignStart="@+id/btnVerifyPhone"
        android:layout_alignLeft="@+id/btnVerifyPhone"/>

    <EditText
        android:id="@+id/txtCode2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="number"
        android:layout_marginLeft="120dp"
        android:background="@drawable/txt_border"
        android:layout_centerVertical="true" />

    <EditText
        android:id="@+id/txtCode3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="number"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/txt_border"
        android:layout_above="@+id/btnVerifyPhone"
        android:layout_alignEnd="@+id/btnVerifyPhone"
        android:layout_alignRight="@+id/btnVerifyPhone"/>

    <EditText
        android:id="@+id/txtCode4"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:background="@drawable/txt_border"
        android:layout_above="@+id/btnVerifyPhone"
        android:layout_toEndOf="@+id/btnVerifyPhone"
        android:layout_toRightOf="@+id/btnVerifyPhone"/>

    <Button
        android:id="@+id/btnVerifyPhone"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="Verify"
        android:textColor="@color/lightFont"
        android:background="@drawable/btn_radius"
        android:layout_below="@+id/txtCode"/>

</RelativeLayout>
