<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.redimed.telehealth.patient.CallActivity">

    <ViewFlipper
        android:id="@+id/vfCall"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/spendingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:id="@+id/waitCallLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.redimed.telehealth.patient.font.RobotoTextView
                    android:id="@+id/lblNameCaller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Doctor Name"
                    android:textColor="@color/lightFont"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnAnswer"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="80dp"
                        android:src="@drawable/phone_receiver_icon"
                        app:backgroundTint="@color/answerFone"
                        android:shadowColor="@android:color/transparent"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnDecline"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_end_call"
                        app:backgroundTint="@color/declineFone"
                        android:stateListAnimator="@null" />

                </LinearLayout>

                <com.redimed.telehealth.patient.font.RobotoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#5a000000"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Calling..."
                    android:textColor="@color/lightFont"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/callLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/publisherView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:keepScreenOn="true" />

            <RelativeLayout
                android:id="@+id/subscriberView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:keepScreenOn="true">

                <ProgressBar
                    android:id="@+id/loadingSpinner"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.redimed.telehealth.patient.font.RobotoTextView
                android:id="@+id/lblNameDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Doctor Name"
                android:textColor="@color/lightFont"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-30dp"
                    android:padding="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/fabHold"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_circle_bg"
                        android:drawableLeft="@drawable/icon_pause"
                        android:enabled="false"
                        android:paddingLeft="12dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabEndCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_end_call"
                        app:backgroundTint="@color/declineFone"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>

                    <Button
                        android:id="@+id/fabMute"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_circle_bg"
                        android:drawableLeft="@drawable/icon_unmute"
                        android:enabled="false"
                        android:paddingLeft="13dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_triangle_call" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#5a000000">

                    <com.redimed.telehealth.patient.font.RobotoTextView
                        android:id="@+id/lblTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:padding="4dp"
                        android:text="00:00:00"
                        android:textColor="@color/lightFont"
                        android:textSize="20dp" />

                    <com.redimed.telehealth.patient.font.RobotoTextView
                        android:id="@+id/lblCaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Calling..."
                        android:textColor="@color/lightFont"
                        android:textSize="20dp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ViewFlipper>

</RelativeLayout>
