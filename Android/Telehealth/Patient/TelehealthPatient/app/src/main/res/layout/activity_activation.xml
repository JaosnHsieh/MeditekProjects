<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lightBackground"
    tools:context=".ActivationActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imgViewLogo"
        android:src="@drawable/logo_redimed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/imgEnterPhone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageViewLogo"/>

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/btnPostCode"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="(+61)"
            android:textSize="20dp"
            android:textColor="@color/greyFont"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/phone"
            android:padding="6dp"
            android:background="@drawable/txt_border"
            android:layout_toStartOf="@+id/txtPhoneNumber"
            android:layout_toLeftOf="@+id/txtPhoneNumber"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/txtPhoneNumber"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:hint="Please enter your phone!"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="8"
            android:background="@drawable/txt_border"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/btnEnterPhone"
            android:layout_alignLeft="@+id/btnEnterPhone"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/btnEnterPhone"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="Enter"
            android:textColor="@color/lightFont"
            android:background="@drawable/btn_radius"
            android:layout_below="@+id/txtPhoneNumber"/>

    </RelativeLayout>

</RelativeLayout>
