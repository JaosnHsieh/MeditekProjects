<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.redimed.telehealth.patient.fragment.ListAppointmentFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/appointment_list_bg"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_title"
                android:textColor="@color/lightFont"
                android:textSize="@dimen/size_txt"
                android:textAllCaps="false"
                android:gravity="top"
                android:background="@android:color/transparent"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <com.redimed.telehealth.patient.font.RobotoTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRACKING REFERRAL"
                android:layout_marginRight="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/lightFont"
                android:textStyle="bold"
                android:textSize="@dimen/size_txt"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <com.redimed.telehealth.patient.font.RobotoTextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/ref_no"
            android:textColor="@color/lightFont"/>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <com.redimed.telehealth.patient.font.RobotoTextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/ref_pra"
            android:textColor="@color/lightFont"/>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <com.redimed.telehealth.patient.font.RobotoTextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/pre_pra"
            android:textColor="@color/lightFont"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"/>

    <com.redimed.telehealth.patient.font.RobotoTextView
        android:id="@+id/lblNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/size_txt"
        android:text="@string/no_data_result"
        android:visibility="visible"/>

</LinearLayout>
