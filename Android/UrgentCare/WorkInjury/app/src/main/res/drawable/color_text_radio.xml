<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" android:color="@color/textColorPrimary"/>
    <!-- focused -->
    <item android:state_focused="true" android:color="@color/textColorPrimary"/>
    <!-- activated -->
    <item android:state_activated="true" android:color="@color/textColorPrimary"/>
    <!-- checked -->
    <item android:state_checked="true" android:color="@color/textColorPrimary"/>

    <!-- default -->
    <item android:color="@color/navigationBarColor"/>
</selector>