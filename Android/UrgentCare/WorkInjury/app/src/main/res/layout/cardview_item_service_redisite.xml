<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutServiceRedisite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="230dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cbServiceRedisite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/icon_checkbox_unselected" />

        <patient.telehealth.redimed.workinjury.font.RobotoTextView
            android:id="@+id/txtServiceRedisite"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cbServiceRedisite"
            android:layout_toEndOf="@+id/cbServiceRedisite" />

        <View
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:background="#979797"
            android:layout_below="@+id/cbServiceRedisite"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>