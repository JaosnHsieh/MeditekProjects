<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redimed.urgentcare.HomeActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:id="@+id/imgBackgroundHome"
        android:background="#f8f9fa"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:id="@+id/imgLogoRedimed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout1">
                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/img_call_us">
                    <com.andexert.library.RippleView
                        android:id="@+id/rippleViewCallUs"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        rv_centered="true"
                        android:background="@android:color/transparent">
                    </com.andexert.library.RippleView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/img_sport_injury">
                    <com.andexert.library.RippleView
                        android:id="@+id/rippleViewSportInjury"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        rv_centered="true"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/transparent">
                    </com.andexert.library.RippleView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout1">
                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/img_work_injury">
                    <com.andexert.library.RippleView
                        android:id="@+id/rippleViewWorkInjury"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        rv_centered="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent">
                    </com.andexert.library.RippleView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/img_faq">
                    <com.andexert.library.RippleView
                        android:id="@+id/rippleViewFAQ"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        rv_centered="true"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent">
                    </com.andexert.library.RippleView>
                </RelativeLayout>
            </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_urgentcare">
        <com.andexert.library.RippleView
            android:id="@+id/rippleViewMakeAppointment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            rv_centered="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent">
        </com.andexert.library.RippleView>
    </RelativeLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/lblslogan"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
