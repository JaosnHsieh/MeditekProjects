<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redimed.urgentcare.HomeActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:id="@+id/imgBackgroundHome"
        android:background="#f8f9fa"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:id="@+id/imgLogoRedimed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout1">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/imgLogoBtn"
                    android:background="@drawable/img_logo_btn"
                    android:layout_marginRight="5dp"/>
                <com.andexert.library.RippleView
                    android:id="@+id/rippleViewSportInjury"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    rv_centered="true">
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:id="@+id/btnSportInjury"
                        android:background="@drawable/img_sport_injury"
                        android:layout_marginLeft="5dp"/>
                </com.andexert.library.RippleView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginTop="10dp">
                <com.andexert.library.RippleView
                    android:id="@+id/rippleViewWorkInjury"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    rv_centered="true">
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:id="@+id/btnWorkInjury"
                        android:background="@drawable/img_work_injury"
                        android:layout_marginRight="5dp"/>
                </com.andexert.library.RippleView>
                <com.andexert.library.RippleView
                    android:id="@+id/rippleViewFAQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    rv_centered="true">
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:id="@+id/btnFAQ"
                        android:background="@drawable/img_faq"
                        android:layout_marginLeft="5dp"/>
                </com.andexert.library.RippleView>
            </LinearLayout>
    </RelativeLayout>

    <com.andexert.library.RippleView
        android:id="@+id/rippleViewMakeAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        rv_centered="true">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnMakeAppointment"
            android:background="@drawable/btn_urgentcare"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>
    </com.andexert.library.RippleView>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/lblslogan"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
