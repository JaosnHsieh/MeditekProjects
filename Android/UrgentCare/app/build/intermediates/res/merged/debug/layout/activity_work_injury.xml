<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.redimed.urgentcare.WorkInjuryActivity"
    android:id="@+id/relativeLayoutWorkInjury">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/imgBackgroundWorkInjury"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgToolBar"
        android:elevation="4dp"
        android:id="@+id/tool_bar">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnCloseWorkInjuryPage"
            android:background="@drawable/ic_action"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Work injury clinic booking"
            android:id="@+id/textViewNamePage"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="21sp"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:scrollbars="none"
        android:id="@+id/scrollViewWorkInjury"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="15dp">
            <!--layoutPatient-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutPatient">
                <!--FirstName-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutFirstName"
                    android:background="@drawable/boder_edittext">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtFirstName"
                        android:hint="First Name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="50"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!--LastName-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutLastName"
                    android:background="@drawable/boder_edittext"
                    android:layout_below="@+id/relativeLayoutFirstName"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtLastName"
                        android:hint="Last Name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="255"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!--ContactPhone-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutContactPhone"
                    android:background="@drawable/boder_edittext"
                    android:layout_below="@+id/relativeLayoutLastName"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtContactPhone"
                        android:hint="Contact Phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences|number"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!--Suburb-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutSuburb"
                    android:background="@drawable/boder_edittext"
                    android:layout_below="@+id/relativeLayoutContactPhone"
                    android:layout_marginTop="20dp">
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteSuburb"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:hint="Suburb"
                        android:fontFamily="sans-serif-light"
                        android:autoText="false">
                        <requestFocus />
                    </AutoCompleteTextView>
                </RelativeLayout>
                <!--DOB-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutDOB"
                    android:background="@drawable/boder_edittext"
                    android:layout_below="@+id/relativeLayoutSuburb"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtDOB"
                        android:hint="Date Of Birth"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"/>
                </RelativeLayout>
                <!--Email-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutEmail"
                    android:background="@drawable/boder_edittext"
                    android:layout_below="@+id/relativeLayoutDOB"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtEmail"
                        android:hint="Email"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="255"/>
                </RelativeLayout>
                <!--Description-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutDescription"
                    android:background="@drawable/boder_edittext"
                    android:layout_below="@+id/relativeLayoutEmail"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtDescription"
                        android:hint="Description"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="2"
                        android:scrollHorizontally="false"
                        android:imeOptions="actionDone"
                        android:fontFamily="sans-serif-light" />
                </RelativeLayout>
                <!--UrgentRequestType-->
                <com.redimed.urgentcare.utils.TableRadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/radioGroupUrgentRequestType"
                    android:layout_below="@+id/relativeLayoutDescription"
                    android:layout_marginTop="20dp">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Physio Therapy"
                            android:textSize="17dp"
                            android:hint="PHY"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Specialist"
                            android:textSize="17dp"
                            android:hint="SPE"
                            android:layout_marginLeft="20dp"/>
                    </TableRow>
                    <TableRow
                        android:id="@+id/group2"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Hand Therapy"
                            android:textSize="17dp"
                            android:hint="HAN"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="GP"
                            android:textSize="17dp"
                            android:hint="GP"
                            android:layout_marginLeft="20dp"/>
                    </TableRow>
                </com.redimed.urgentcare.utils.TableRadioGroup>
            </RelativeLayout>
            <!--layoutCompany-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutCompany"
                android:layout_below="@+id/layoutPatient"
                android:layout_marginTop="15dp">
                <!--CompanyName-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutCompanyName"
                    android:background="@drawable/boder_edittext">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtCompanyName"
                        android:hint="Company Name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="255"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!--ContactPerson-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutContactPerson"
                    android:background="@drawable/boder_edittext"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/relativeLayoutCompanyName">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtContactPerson"
                        android:hint="Contact Person"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="255"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!--CompanyPhone-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutCompanyPhone"
                    android:background="@drawable/boder_edittext"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/relativeLayoutContactPerson">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtCompanyPhone"
                        android:hint="Company Phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="255"/>
                </RelativeLayout>
            </RelativeLayout>
            <!--Button-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutCompany"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/btnWorkInjury"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_make_appointment"
                    android:text="Make Appointment"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
