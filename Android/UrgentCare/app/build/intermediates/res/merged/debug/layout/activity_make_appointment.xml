<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/relativeLayoutMakeAppointment"
    tools:context="com.redimed.urgentcare.MakeAppointmentActivity">
    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgToolBar"
        android:elevation="4dp"
        android:id="@+id/tool_bar">
        <com.andexert.library.RippleView
            android:id="@+id/rippleViewCloseMakeAppointmentPage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            rv_centered="true">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnCloseMakeAppointmentPage"
                android:background="@drawable/ic_action"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </com.andexert.library.RippleView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Urgent care clinic booking"
            android:id="@+id/textViewNamePage"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="21sp"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:scrollbars="none"
        android:id="@+id/scrollViewMakeAppointment"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="15dp">
            <!--FirstName-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutFirstName"
                android:background="@drawable/boder_edittext">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtFirstName"
                        android:hint="First Name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="50"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--LastName-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutLastName"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutFirstName"
                android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtLastName"
                        android:hint="Last Name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="255"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--ContactPhone-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutContactPhone"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutLastName"
                android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtContactPhone"
                        android:hint="Contact Phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences|number"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_centerInParent="true"
                        android:textColor="#F44336"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--Suburb-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutSuburb"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutContactPhone"
                android:layout_marginTop="15dp">
                <AutoCompleteTextView
                    android:id="@+id/autoCompleteSuburb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:hint="Suburb"
                    android:fontFamily="sans-serif-light">
                    <requestFocus />
                </AutoCompleteTextView>
            </RelativeLayout>
            <!--DOB-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutDOB"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutSuburb"
                android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtDOB"
                        android:hint="Date Of Birth"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"/>
            </RelativeLayout>
            <!--Email-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutEmail"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutDOB"
                android:layout_marginTop="15dp">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/txtEmail"
                        android:hint="Email"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionDone"
                        android:maxLength="255"/>
            </RelativeLayout>
            <!--Description-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutDescription"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutEmail"
                android:layout_marginTop="15dp">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtDescription"
                    android:hint="Description"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="2"
                    android:scrollHorizontally="false"
                    android:imeOptions="actionDone"
                    android:fontFamily="sans-serif-light" />
            </RelativeLayout>
            <!--GPReferral-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutGPReferral"
                android:layout_below="@+id/relativeLayoutDescription"
                android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblGPReferral"
                        android:text="GP Referral"
                        android:layout_centerVertical="true"
                        android:textSize="17dp"
                        android:textColor="@android:color/black"/>
                    <!--Radio GP Referral-->
                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroupGPReferral"
                        android:layout_toRightOf="@+id/lblGPReferral"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:gravity="center">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:fontFamily="sans-serif-light"
                            android:textSize="17dp"
                            android:hint="Y"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="No"
                            android:fontFamily="sans-serif-light"
                            android:textSize="17dp"
                            android:hint="N"/>
                    </RadioGroup>
            </RelativeLayout>
            <!--UrgentRequestType-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutUrgentRequestType"
                android:layout_below="@+id/relativeLayoutGPReferral"
                android:layout_marginTop="15dp">
                <!--Radio GP Referral-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physio Therapy"
                        android:id="@+id/checkboxPhysiotherapy"
                        android:fontFamily="sans-serif-light"
                        android:textSize="17dp"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specialist"
                        android:id="@+id/checkboxSpecialist"
                        android:fontFamily="sans-serif-light"
                        android:textSize="17dp"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hand Therapy"
                        android:id="@+id/checkboxHandTherapy"
                        android:fontFamily="sans-serif-light"
                        android:textSize="17dp"/>
                </LinearLayout>
            </RelativeLayout>
            <!--Button-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutUrgentRequestType"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp">
                <com.andexert.library.RippleView
                    android:id="@+id/rippleViewBtnMakeAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    rv_centered="true">
                    <Button
                        android:id="@+id/btnMakeAppointment"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_make_appointment"
                        android:text="Make Appointment"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF"/>
                </com.andexert.library.RippleView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
