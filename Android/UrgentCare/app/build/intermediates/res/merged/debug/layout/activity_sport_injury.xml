<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redimed.urgentcare.SportInjuryActivity"
    android:id="@+id/relativeLayoutSportInjury"
    android:background="#FFFFFF">
    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSportInjury"
        android:minHeight="?attr/actionBarSize"
        android:background="#102B3F"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btnCloseSportInjuryPage"
            android:background="@drawable/ic_close_page"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sport Injury Clinic Booking"
            android:id="@+id/textViewNamePage"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="21sp"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarSportInjury"
        android:padding="20dp"
        android:scrollbars="none"
        android:id="@+id/scrollViewSportInjury"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <!--FirstName-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutFirstName"
                android:background="@drawable/boder_edittext">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtFirstName"
                    android:hint="First Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:fontFamily="sans-serif-light"
                    android:imeOptions="actionDone"
                    android:maxLength="50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_centerInParent="true"
                    android:textColor="#F44336"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--LastName-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutLastName"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutFirstName"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtLastName"
                    android:hint="Last Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:fontFamily="sans-serif-light"
                    android:imeOptions="actionDone"
                    android:maxLength="255"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_centerInParent="true"
                    android:textColor="#F44336"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--ContactPhone-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutContactPhone"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutLastName"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtContactPhone"
                    android:hint="Contact Phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences|number"
                    android:fontFamily="sans-serif-light"
                    android:imeOptions="actionDone"
                    android:maxLength="10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_centerInParent="true"
                    android:textColor="#F44336"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <!--Suburb-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutSuburb"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutContactPhone"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtSuburb"
                    android:hint="Suburb"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:fontFamily="sans-serif-light"
                    android:imeOptions="actionDone"
                    android:maxLength="100"/>
            </RelativeLayout>
            <!--DOB-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutDOB"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutSuburb"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtDOB"
                    android:hint="Date Of Birth"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:fontFamily="sans-serif-light"/>
            </RelativeLayout>
            <!--Email-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutEmail"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutDOB"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtEmail"
                    android:hint="Email"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    android:fontFamily="sans-serif-light"
                    android:imeOptions="actionDone"
                    android:maxLength="250"/>
            </RelativeLayout>
            <!--Description-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutDescription"
                android:background="@drawable/boder_edittext"
                android:layout_below="@+id/relativeLayoutEmail"
                android:layout_marginTop="20dp">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/txtDescription"
                    android:hint="Description"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="2"
                    android:scrollHorizontally="false"
                    android:imeOptions="actionDone"
                    android:fontFamily="sans-serif-light" />
            </RelativeLayout>
            <!--GPReferral-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutGPReferral"
                android:layout_below="@+id/relativeLayoutDescription"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblGPReferral"
                    android:text="GP Referral"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:textColor="@android:color/black"/>
                <!--Radio GP Referral-->
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroupGPReferral"
                    android:layout_toRightOf="@+id/lblGPReferral"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:gravity="center">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:fontFamily="sans-serif-light"
                        android:textSize="17dp"
                        android:hint="Y"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="No"
                        android:fontFamily="sans-serif-light"
                        android:textSize="17dp"
                        android:hint="N"/>
                </RadioGroup>
            </RelativeLayout>
            <!--UrgentRequestType-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutUrgentRequestType"
                android:layout_below="@+id/relativeLayoutGPReferral"
                android:layout_marginTop="20dp">
                <!--Radio GP Referral-->
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroupUrgentRequestType"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Physio Therapy"
                        android:textSize="17dp"
                        android:hint="PHY"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Specialist"
                        android:textSize="17dp"
                        android:hint="SPE"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Hand Therapy"
                        android:textSize="17dp"
                        android:hint="HAN"/>
                </RadioGroup>
            </RelativeLayout>
            <!--Button-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutUrgentRequestType"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/btnSportInjury"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_make_appointment"
                    android:text="Make Appointment"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
